<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardElevation="5dp"
    android:layout_margin="5dp"
    android:foreground="@drawable/touch_selector"
    android:adjustViewBounds="true"
    app:cardCornerRadius="4dp"
    >

    <com.example.babayaga.popularmovies.utils.CustomImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="2dp"
        android:layout_gravity="bottom"
        android:scaleType="centerCrop"
        android:background="@drawable/poster"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DescBarHeight"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:background="#50000000">
        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_weight="4.5"
            android:paddingLeft="@dimen/horizontalMarginStatic"
            android:paddingRight="@dimen/horizontalMarginStatic"
            android:paddingEnd="@dimen/horizontalMarginStatic"
            android:paddingStart="@dimen/horizontalMarginStatic"
            android:textColor="#fff"
            android:textSize="@dimen/descTitle15"
            android:gravity="start|center_vertical"
            />

        <ToggleButton
            android:layout_width="@dimen/toggleSize"
            android:layout_height="@dimen/toggleSize"
            android:background="@drawable/check"
            android:layout_marginRight="@dimen/horizontalMarginStatic"
            android:layout_marginEnd="@dimen/horizontalMarginStatic"
            android:textOff=""
            android:textOn=""
            android:id="@+id/fav"/>
    </LinearLayout>

</android.support.v7.widget.CardView>