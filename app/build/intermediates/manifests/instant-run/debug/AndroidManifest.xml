<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.babayaga.popularmovies"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="24" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.example.babayaga.popularmovies.activities.MovieList" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.babayaga.popularmovies.activities.SettingsActivity"
            android:parentActivityName="com.example.babayaga.popularmovies.activities.MovieList" />
        <activity
            android:name="com.example.babayaga.popularmovies.activities.DetailActivity"
            android:parentActivityName="com.example.babayaga.popularmovies.activities.MovieList"
            android:theme="@style/AppTheme.NoActionBar" />

        <provider
            android:name="com.example.babayaga.popularmovies.data.MovieProvider"
            android:authorities="com.example.babayaga.popularmovies" />
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>